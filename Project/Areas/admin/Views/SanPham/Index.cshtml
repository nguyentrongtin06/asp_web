@model IEnumerable<SanPham>
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>
                Tên Sản Phẩm
            </th>
            <th> Mô Tả </th>
            <th> Giá Bán </th>
            <th>Hình Ảnh</th>
            <th>Tên thể loại</th>
            <th>Chức năng</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td><img width="50%" src="@item.ImageUrl" /></td>
                    <td>@item.TheLoai.Name</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                        <a href="#">Details</a> |
                        <a href="#" onclick="confirmDelete(@item.Id, $(this))">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="SanPham" asp-action="Upsert" class="btn btn-primary">Thêm Mới</a>
</div>
<script>
    function confirmDelete(id, row) { 
        if (confirm("bạn có chắc chắn xóa sản phẩm có id là " + id + "?")) {
            xoa(id, $(row))
        }
    }
    function xoa(idx, row) {
        $.ajax({
            URL: `SanPham/Delete`,// truoc so 1 ben duoi nut ESC
            Data: { id: idx },
            type: "POST",
            success: function (data) {
                row.closest("tr").remove();
            }
        })
    }
</script>

