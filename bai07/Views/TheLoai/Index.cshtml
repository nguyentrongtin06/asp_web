<div class="container">
    <form asp-action="Search" method="get">
        <input type="text" name="searchString" placeholder="Nhập thể loại cần tìm...."
        value="@ViewBag.SearchString"/>
        <input type="submit" value="tìm kiếm"/>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên Thể Loại
                </th>
                <th> Ngày tạo </th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.TheLoai)
            {
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="40%">@string.Format("{0:dd/MM/yyyy}", item.DateCreated)</td>
                    <td width="30%">    
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary"> Thêm mới</a>
</div>

